<div class="row">
  <div class="col-12 col-xl-12 stretch-card">
    <div class="row flex-grow">
      <div class="col-md-4 grid-margin stretch-card">
        <div class="card">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-baseline">
              <h6 class="card-title mb-0">Total Orders Completed</h6>
              <div class="dropdown mb-2">
                <button class="btn p-0" type="button" id="dropdownMenuButton1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  <i class="icon-lg text-muted pb-3px" data-feather=""></i>
                </button>
              </div>
            </div>
            <div class="row">
              <div class="col-6 col-md-12 col-xl-5">
                <h3 class="mb-2"><%= complete_ord %></h3>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-4 grid-margin stretch-card">
        <div class="card">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-baseline">
              <h6 class="card-title mb-0">Total Orders Pending</h6>
              <div class="dropdown mb-2">
                <button class="btn p-0" type="button" id="dropdownMenuButton1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  <i class="icon-lg text-muted pb-3px" data-feather=""></i>
                </button>                        
              </div>
            </div>
            <div class="row">
              <div class="col-6 col-md-12 col-xl-5">
                <h3 class="mb-2"><%= pending_ord %></h3>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div> <!-- row -->

<nav class="page-breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Orders</a></li>
                <li class="breadcrumb-item active" aria-current="page">Pending View</li>
            </ol>
        </nav>

        <div class="row">
  <div class="col-md-12 col-xl-8 left-wrapper">
    <div class="col-md-12 grid-margin stretch-card">
      <div class="card">
        <div class="card-body">
          <h6 class="card-title">Pending Orders</h6>
          <p class="card-description">Select order to view its detail.</p>
          <div class="table-responsive">
              <table class="table table-hover" id="pendor">
                <thead>
                  <tr>
                    <th>Customer Name</th>
                    <th>Customer Phone</th>
                    <th>Order Products</th>
                    <th>Order Status</th>
                  </tr>
                </thead>
                <tbody>
                    <% data.forEach(function(orders) { %>
                    <tr class="itemor" onclick="myItemTap('<%= orders.order_id %>')">
                        <td><%= orders.by_member_name %></td>
                        <td>+256 <%= orders.by_phone %></td>
                        <td><%= orders.items_number %></td>
                        <% if( orders.status == 1 ) { %>
                        <td>DELIVERED</td>
                        <% } else { %>
                        <td>PENDING</td>
                        <% } %>
                    </tr>
                    <% }); %>                           
                </tbody>
              </table>
          </div>
        </div>
      </div>
    </div>
  </div><!-- Table End -->
  <div class="d-none d-xl-block col-xl-4 right-wrapper">
    <div class="col-md-12 grid-margin">
      <div class="card rounded">
        <div class="card-body">
          <div class="latest-photos">
            <div class="">
              <div class="info text-center">
                <p class="name font-weight-bold mb-0" id="memberName">Not Selected</p>
                <p class="email text-muted mb-3" id="memberPhone">Not Selected</p>
              </div>
              <div class="mt-3">
                <label class="tx-11 font-weight-bold mb-0 text-uppercase">Delivery Address:</label>
                <div class="d-flex justify-content-between align-items-center flex-wrap">  
                  <div class="d-flex align-items-center flex-wrap text-nowrap">               
                    <p class="text-muted" id="deliveryAddress">Not Selected</p>
                  </div>
                  <div class="icons">
                    <a href="#" class="icon" id="showmap" value="MapAddress" target="_blank"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-map-pin"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path><circle cx="12" cy="10" r="3"></circle></svg>
                    </a>
                  </div>
                </div>
              </div>
              <div class="mt-3">
                <label class="tx-11 font-weight-bold mb-0 text-uppercase">Ordered Time:</label>
                <p class="text-muted" id="orderTime">Not Selected</p>
              </div>
              <div class="mt-3">
                <label class="tx-11 font-weight-bold mb-0 text-uppercase">Delivery Day:</label>
                <p class="text-muted" id="deliveryday">Not Selected</p>
              </div>
              <div class="mt-3">
                <label class="tx-11 font-weight-bold mb-0 text-uppercase">Order Status:</label>
                <div class="d-flex justify-content-between align-items-center flex-wrap">
                    <div class="d-flex align-items-center flex-wrap text-nowrap">                
                        <p class="text-muted" id="orderStatus">Not Selected</p>
                    </div>
                    <div class="d-flex align-items-center flex-wrap text-nowrap">
                        <button type="button" id="deliveryBtn" value="" class="btn btn-primary btn-icon-text mb-2 mb-md-0">
                        DELIVERED
                        </button>
                    </div>
                </div>
              </div>
              </br><hr>
              <h6 class="card-title" >Ordered Items</h6>
              <div id="cartHolder"></div>
              </br><hr>
              <div id="commentHolder"></div>               
            </div>
          </div>
        </div>
      </div>
    </div>
  </div><!-- Infograph End -->
        </div> 
    </div>

